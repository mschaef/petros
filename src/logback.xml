<configuration debug="false">

 <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date{ISO8601} %p %logger{20} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="petros.handler" level="DEBUG"/>

  <root level="INFO">
    <appender-ref ref="CONSOLE"/>
  </root>
</configuration>
