<configuration debug="false">

 <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>/home/petros/logs/petros.log</file>

    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>/home/petros/logs/petros-%d{yyyy-MM}.log</fileNamePattern>
    </rollingPolicy>

    <encoder>
      <pattern>%date{ISO8601} [%t] %-5p %c - %msg%n</pattern>
    </encoder>
  </appender> 

  <root level="INFO">
    <appender-ref ref="FILE"/>
  </root>
</configuration>
